#!/bin/bash

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if current directory is a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}âŒ Error: Not a git repository${NC}"
    echo -e "${YELLOW}ğŸ’¡ Run this command inside a git repository${NC}"
    exit 1
fi

# Stage all changes
echo -e "${BLUE}ğŸ“¦ Staging changes...${NC}"
git add .

generate_commit_message() {
    # Get modified files without emojis, just indentation
    ADDED_FILES=$(git diff --cached --name-only --diff-filter=A | sed 's/^/\t/g')
    MODIFIED_FILES=$(git diff --cached --name-only --diff-filter=M | sed 's/^/\t/g')
    DELETED_FILES=$(git diff --cached --name-only --diff-filter=D | sed 's/^/\t/g')
    RENAMED_FILES=$(git diff --cached --name-only --diff-filter=R | sed 's/^/\t/g')

    # Build commit message with custom title if provided
    if [ -n "$1" ]; then
        echo "$1" > commit_msg.txt
    else
        echo "Changes:" > commit_msg.txt
    fi
    
    # List modified files by category without emojis
    [[ ! -z "$ADDED_FILES" ]] && echo -e "\nAdded:\n$ADDED_FILES" >> commit_msg.txt
    [[ ! -z "$MODIFIED_FILES" ]] && echo -e "\nModified:\n$MODIFIED_FILES" >> commit_msg.txt
    [[ ! -z "$DELETED_FILES" ]] && echo -e "\nDeleted:\n$DELETED_FILES" >> commit_msg.txt
    [[ ! -z "$RENAMED_FILES" ]] && echo -e "\nRenamed:\n$RENAMED_FILES" >> commit_msg.txt

    # Show what's being committed
    echo -e "${YELLOW}ğŸ“‹ Committing changes...${NC}"
    
    # Use generated message for commit
    git commit -F commit_msg.txt
    rm commit_msg.txt

    # Get current branch name
    CURRENT_BRANCH=$(git branch --show-current)
    
    echo -e "${BLUE}ğŸš€ Pushing to ${YELLOW}$CURRENT_BRANCH${BLUE}...${NC}"
    
    # Push to the current branch
    if git push origin "$CURRENT_BRANCH"; then
        echo -e "${GREEN}âœ… Successfully pushed to $CURRENT_BRANCH${NC}"
    else
        echo -e "${RED}âŒ Failed to push to $CURRENT_BRANCH${NC}"
        echo -e "${YELLOW}ğŸ’¡ Try running: git push origin $CURRENT_BRANCH manually${NC}"
    fi
}

# Check if there are any changes
if git status --porcelain | grep -q '^.*$'; then
    generate_commit_message "$1"
else
    echo -e "${RED}âŒ No changes to commit${NC}"
    echo -e "${YELLOW}ğŸ’¡ Make some changes first${NC}"
    exit 1
fi
